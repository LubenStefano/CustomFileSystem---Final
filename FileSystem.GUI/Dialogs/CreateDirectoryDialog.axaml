<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FileSystem.GUI.Dialogs.CreateDirectoryDialog"
        Title="Create New Directory"
        Width="400" Height="200"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Create New Directory" 
                   FontSize="16" FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <StackPanel Grid.Row="1" Spacing="10">
            <TextBlock Text="Directory Name:" Margin="0,0,0,5"/>
            <TextBox x:Name="DirectoryNameTextBox" 
                     Watermark="Enter directory name"/>
            <TextBlock Text="Enter a name for the new directory." 
                       FontSize="10" 
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="10" 
                    Margin="0,20,0,0">
            <Button Content="Create" 
                    x:Name="CreateButton" 
                    MinWidth="80" 
                    IsDefault="True"/>
            <Button Content="Cancel" 
                    x:Name="CancelButton" 
                    MinWidth="80" 
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
